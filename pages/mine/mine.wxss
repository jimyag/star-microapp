.userinfo {
  height: 300rpx;
  background-color: rgb(255, 255, 255);
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userAvatarUrl {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 10rpx;
}

.nickName {
  max-width: 40vw;
  font-weight: bold;
}

.background {
  color: #eeeeee;
  height: 40rpx;
}

.card {
  height: 100rpx;
  background-color: rgb(255, 255, 255);
  width: 100% !important;
  padding: .5rem;
}

.menu-option {
  display: flex;
  justify-content: space-between;
  font: inherit;
  /* 覆盖 <button> 字体 */
}

.context {
  font-size: 40rpx;
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: center;
  text-align: center；
}

button {
  margin: 0;
  padding: 0;
  background-color: inherit;
  position: static;
  align-items: center;
}

button:after {
  content: none;
}

button::after {
  border: none;
}